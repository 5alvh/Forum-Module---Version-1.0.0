package com.mindlink.forum.utils;

import com.mindlink.forum.module.DTO.UserDtos.UserCreateDto;
import com.mindlink.forum.module.DTO.UserDtos.UserGetDto;
import com.mindlink.forum.module.User;
import org.mapstruct.Mapper;
import org.mapstruct.factory.Mappers;

import java.util.List;

@Mapper(componentModel = "spring")
public interface MapperTest {
        MapperTest INSTANCE = Mappers.getMapper(MapperTest.class);
        UserCreateDto toUserDto(User user);
        List<UserCreateDto> toUsersDto(List<User> users);

        UserGetDto toUserDtoGet(User user);
        List<UserGetDto> toUsersDtoGet(List<User> users);
}
